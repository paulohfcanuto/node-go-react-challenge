  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.6",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/node": "^14.0.13",
    "chai": "^4.2.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "0.0.4",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.4",
    "supertest": "^6.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "apollo-server-express": "^2.14.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.1.0",
